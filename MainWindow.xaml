<Window x:Class="Pfeilansammlungsfelder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pfeilansammlungsfelder"
        xmlns:material="clr-namespace:MaterialDesign2.Controls;assembly=MaterialDesign2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <material:PanBorder>
            <Canvas x:Name="plot" Background="White">
                <Line X1="-1E+99" X2="1E+99" Stroke="Black" StrokeThickness="2"/>
                <Line Y1="-1E+99" Y2="1E+99" Stroke="Black" StrokeThickness="2"/>
                <ItemsControl x:Name="arrows">

                </ItemsControl>
            </Canvas>
        </material:PanBorder>
    </Grid>
</Window>
